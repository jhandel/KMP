{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "docs:js": "jsdoc -c jsdoc.config.json",
        "test": "npm run test:js && npm run test:ui",
        "test:js": "jest",
        "test:js:watch": "jest --watch",
        "test:js:coverage": "jest --coverage",
        "test:ui": "bddgen && bash ../reset_dev_database.sh && playwright test",
        "test:ui:headed": "bddgen && bash ../reset_dev_database.sh && playwright test --headed",
        "test:ui:debug": "bddgen && bash ../reset_dev_database.sh && playwright test --debug",
        "test:ui:codegen": "playwright codegen",
        "test:ui:report": "playwright show-report tests/ui-reports/html --port 9324 --host 0.0.0.0",
        "test:ui:install": "playwright install",
        "test:security": "bash ../security-checker.sh",
        "test:perf": "node scripts/perf/sizing-benchmark.js",
        "postinstall": "patch-package"
    },
    "devDependencies": {
        "@babel/core": "^7.29.0",
        "@babel/preset-env": "^7.29.0",
        "@playwright/test": "^1.58.2",
        "@testing-library/jest-dom": "^6.9.1",
        "axios": "^1.13.5",
        "babel-jest": "^30.2.0",
        "clean-jsdoc-theme": "^4.3.0",
        "cross-env": "^10.1",
        "exports-loader": "^5.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jsdoc": "^4.0.5",
        "jsdom": "^28.1.0",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.23",
        "playwright-bdd": "^8.4.2",
        "patch-package": "^8.0.1",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.97.3",
        "sass-loader": "^16.0.7",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.2.0",
        "@hotwired/stimulus": "^3.2.2",
        "@hotwired/turbo": "^8.0.23",
        "bootstrap": "^5.3.8",
        "easymde": "^2.20.0",
        "guifier": "^1.0.33",
        "pdfjs-dist": "^5.4.624",
        "popper.js": "^1.16.1",
        "qrcode": "^1.5.4"
    },
    "browserslist": [
        "defaults"
    ],
    "overrides": {
        "fast-xml-parser": ">=5.3.4",
        "bn.js": "^5.2.3",
        "glob": "^13.0.6",
        "minimatch": "^10.2.2",
        "rimraf": "^6.1.3",
        "webpack-dev-server": "^5.2.2"
    }
}
